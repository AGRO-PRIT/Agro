<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AgroBox</title>
    <link rel="icon" href="imagens/logo.png">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/conta.css">

    
</head>

<body>  
    <main>
     <!-- NavBar -->

     <%- include('../../partials/navbar'); %>

    <!--  CONTA CONSUMIDOR  -->

    <%- include('../../partials/conta'); %>


    <section class="page-container">
         <section id="configuracoes" class="configuracoes" >
                <h1>Configurações</h1>
            </section>
            <form name="form-dados">
  <section class="box-container">
    
    <section class="box-dados-pessoais">
      <h3>Dados Pessoais</h3>

      <section class="input-wrapper">
        <label for="nome">Nome Completo</label>
        <input type="text" id="nome" name="nome" placeholder="Digite seu nome completo">
        <button type="button" class="edit-icon" aria-label="Editar Nome">
          <img src="imagens/icon_lapis.png" alt="Editar">
        </button>
        <span class="error-message" id="nome-error"></span>
      </section>

      <section class="input-wrapper">
        <label for="cpf">CPF</label>
        <input type="text" id="cpf" name="cpf" placeholder="Digite seu CPF">
        <button type="button" class="edit-icon" aria-label="Editar CPF">
          <img src="imagens/icon_lapis.png" alt="Editar">
        </button>
        <span class="error-message" id="cpf-error"></span>
      </section>

      <section class="input-wrapper">
        <label for="telefone">Telefone</label>
        <input type="text" id="telefone" name="telefone" placeholder="Digite seu telefone" required pattern="\(\d{2}\) \d{4,5}-\d{4}">
        <button type="button" class="edit-icon" aria-label="Editar Telefone">
          <img src="imagens/icon_lapis.png" alt="Editar">
        </button>
        <span class="error-message" id="telefone-error"></span>
      </section>
    </section>

    <section class="box-dados-acesso">
      <h3>Dados de Acesso</h3>

      <section class="input-wrapper">
        <label for="email">Email</label>
        <input type="text" id="email" name="email" placeholder="Digite seu email">
        <button type="button" class="edit-icon" aria-label="Editar Email">
          <img src="imagens/icon_lapis.png" alt="Editar">
        </button>
        <span class="error-message" id="email-error"></span>
      </section>

      <section class="input-wrapper">
        <label for="senha">Senha</label>
        <input type="password" id="senha" name="senha" placeholder="Digite sua senha">
        <button type="button" class="edit-icon" aria-label="Editar Senha">
          <img src="imagens/icon_lapis.png" alt="Editar">
        </button>
        <span class="error-message" id="senha-error"></span>
      </section>
    </section>

  </section>

  <button class="botao-enviar" type="submit">Salvar</button>
</form>
        </section>
</main>
    <!-- Rodapé -->
     
    <%- include('../../partials/footer'); %>
    
</body>
</html>

        <!-- Script -->

<script src="js/perfil.js" defer></script>
<script src="js/validacaoConta.js" defer></script>
<script src="js/darkmode.js" defer> </script>
<script src="js/imagens.js"> </script>




