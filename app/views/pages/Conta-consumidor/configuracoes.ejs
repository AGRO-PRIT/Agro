    <section class="page-container">
         <section id="configuracoes" class="configuracoes" >
                <h1>Configurações</h1>
            </section>
            <form name="form-dados">
                <article class="box-container">
                    <article class="box-dados-pessoais">
                        <h3>Dados Pessoais</h3>
                        <article class="input-wrapper">
                            <label for="nome">Nome Completo</label>
                            <input type="text" name="nome" placeholder="Digite seu nome completo">
                            <img src="imagens/icon_lapis.png" class="edit-icon" alt="Editar">
                            <span class="error-message" name="nome-error"></span>
                        </article>
                        <article class="input-wrapper">
                            <label for="cpf">CPF</label>
                            <input type="text" name="cpf" placeholder="Digite seu CPF">
                            <img src="imagens/icon_lapis.png" class="edit-icon" alt="Editar">
                            <span class="error-message" name="cpf-error"></span>
                        </article>
                        <article class="input-wrapper">
                            <label for="telefone">Telefone</label>
                            <input type="text" name="telefone" placeholder="Digite seu telefone" required pattern="\(\d{2}\) \d{4,5}-\d{4}">
                            <img src="imagens/icon_lapis.png" class="edit-icon" alt="Editar">
                            <span class="error-message" name="telefone-error"></span>
                        </article>
                    </article>
                    
                    <article class="box-dados-acesso">
                        <h3>Dados de Acesso</h3>
                        <article class="input-wrapper">
                            <label for="email">Email</label>
                            <input type="text" name="email" placeholder="Digite seu email">
                            <img src="imagens/icon_lapis.png" class="edit-icon" alt="Editar">
                            <span class="error-message" name="email-error"></span>
                        </article>
                        <article class="input-wrapper">
                            <label for="senha">Senha</label>
                            <input type="password" name="senha" placeholder="Digite sua senha">
                            <img src="imagens/icon_lapis.png" class="edit-icon" alt="Editar">
                            <span class="error-message" name="senha-error"></span>
                        </article>
                    </article>
                </article>
                <button class="botao-enviar" type="submit">Salvar</button>
            </form>
        </section>
</main>
    <!-- Rodapé -->
     
    <%- include('../../partials/footer'); %>
    
</body>
