<main class="container">
      <h1>Carrinho de Compras</h1>

        <section class="conteudo">

            <article class="cart-itens">

                <p class="empty-cart-message" style="display: none;">Seu carrinho está vazio.</p>
                <p class="empty-cart-message2" style="display: none;">Adicione produtos para montar seu Carrinho.</p>

                <article class="cart-item">
                    <article class="imagem-Maçã">
                        <img src="imagens/Frutas/maça.png" alt="Produto 1">
                    </article>
                    <article class="details">
                        <h3 class="cart-product-title">Maçã Fuji (450g)</h3>
                        <p class="vendor">Nome Do Vendedor</p>
                        <article class="quantity">
                            <button class="menos">-</button>
                            <input type="number" class="product-quantity" value="1" min="1" max="200"> 
                            <button class="mais">+</button>
                        </article>
                    </article>
                    
                    <article class="price">
                        <h3 class="cart-item-price">R$10,00</h3>
                    <article class="remove">
                        <img class="removimg" src="imagens/icon_lixeira.png" alt="icone de uma lixeira">  
                        <i class="excluir">Excluir</i> 
                    </article>
                </article>
                </article>

            </article>
           
            <section class="pedido-final">
                <section class="resumo">
                        <h2>Resumo do Pedido</h2>

                        <article class="item">
                            Produtos
                            (<span class="cart-countTotal">0</span>)             
                            
                            <strong id="total-value" class="total-pedido">R$000,00</strong>
                        </article>

                        <article class="item">
                            Frete:
                            <strong class="total-pedido2">R$000,00</strong>
                        </article>

                            
                        <article class="item-cupom">
                            <section>
                                <label for="toggle-cupom">
                                    Inserir cupom de desconto
                                    <i class="cupom">
                                        <img src="imagens/icon_cupom(verde).png" alt="icone de cupom">
                                    </i>
                                </label>
                            </section>
                        </article>
                        <input type="checkbox" id="toggle-cupom" style="display: none;">
                        <section class="content-cupom">
                            <input type="text" id="cupom" placeholder="Digite o codigo do cupom">
                            <button class="botao-cupom" onclick="validarCupom()">Adicionar cupom</button>
                            <p id="-mensagem" style="color: red;"></p> 
                        </section>
                        
                        <section class="finalizacao">
                        <article class="total">
                            Total: 
                            <strong>R$000,00</strong>
                        </article>

                        <a href="/finalizar-carrinho-endereco">
                            <button class="checkout-button">Finalizar Compra</button>
                        </a>
                    </section>
                        

        </section>

         <section class="finalizar-compra">
            <article class="content-text">
                <h3>Calcular frete e prazo de entrega</h3>
                <input type="text" id="cep" class="cep" placeholder="Digite seu CEP" oninput="formatarCEP(this)">
                <button onclick="calcularFrete()">CALCULAR</button>
                <p id="cep-mensagem" style="color: red;"></p> <!-- Mensagem de validação -->
                <p id="endereco"></p> <!-- Exibir endereço -->
            </article>
        </section>
        
        
        
</main>

