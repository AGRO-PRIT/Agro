                <label class="filter-option">
                    <span>Verduras</span>
                    <input type="checkbox" name="category" value="verduras">
                    <span class="checkmark"></span>
                </label>
                <label class="filter-option">
                    <span>Frutas</span>
                    <input type="checkbox" name="category" value="frutas">
                    <span class="checkmark"></span>
                </label>
                <label class="filter-option">
                    <span>Cereais</span>
                    <input type="checkbox" name="category" value="cereais">
                    <span class="checkmark"></span>
                </label>
                <label class="filter-option">
                    <span>Latiociníos</span>
                    <input type="checkbox" name="category" value="latiociníos">
                    <span class="checkmark"></span>
                </label>
                <label class="filter-option">
                    <span>Suplementos</span>
                    <input type="checkbox" name="category" value="suplementos">
                    <span class="checkmark"></span>
                </label>
                <label class="filter-option">
                    <span>Grãos</span>
                    <input type="checkbox" name="category" value="grãos">
                    <span class="checkmark"></span>
                </label>
                <label class="filter-option">
                    <span>Chás</span>
                    <input type="checkbox" name="category" value="chás">
                    <span class="checkmark"></span>
                </label>
                <label class="filter-option">
                    <span>Proteínas</span>
                    <input type="checkbox" name="category" value="proteínas">
                    <span class="checkmark"></span>
                </label>
    
                <!-- Adicione mais categorias conforme necessário -->
                 
            </form>
    
            <h2>Ordenar</h2>
            <form id="sort-filters">
                <label class="filter-option">
                    <span>Mais vendidos</span>
                    <input type="radio" name="sort" value="mais_vendidos">
                    <span class="radiomark"></span>
                </label>
                <label class="filter-option">
                    <span>Menor preço</span>
                    <input type="radio" name="sort" value="menor_preco">
                    <span class="radiomark"></span>
                </label>
                <label class="filter-option">
                    <span>Maior preço</span>
                    <input type="radio" name="sort" value="maior_preco">
                    <span class="radiomark"></span>
                </label>
                <label class="filter-option">
                    <span>Relevância</span>
                    <input type="radio" name="sort" value="relevancia">
                    <span class="radiomark"></span>
                </label>
                <!-- Adicione mais opções de ordenação conforme necessário -->
            </form>
            
            <button type="submit" form="category-filters" class="apply-button">Aplicar</button>
        </div>
       
       <section class="antes-produtos">
        <h1 class="titulo">Todos os produtos</h1>
        <%- include('../partials/produtospartial'); %>
       </section>
    

    
</section>
